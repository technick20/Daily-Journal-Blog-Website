<%- include('partials/header'); -%>

<div style="margin-top:5px">
<img src="images/1.jpg" alt=""></div>

<h1>Home</h1>

<p><%= startingContent %></p>

<% posts.forEach(post => { %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.content.substring(0, 100)+ " ..." %>
        <a href="/posts/<%=post._id%>">Read More</a>
    </p>
<% }); %>

<a class="btn btn-lg" style="font-style: bold; font-size: 25px; background-color: rgb(196, 189, 189); color: white;" href="/compose">+</a>

<%- include('partials/footer'); -%>